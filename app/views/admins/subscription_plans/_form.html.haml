- if @subscription_plan.errors.any?
  .alert.alert-block.alert-danger
    %h4.alert-heading Oh Snap!
    We found #{pluralize(@subscription_plan.errors.count, "problem")} with the form:
    %ul
      - @subscription_plan.errors.full_messages.each do |msg|
        %li= msg
= f.input :is_featured, :label => "Featured?", label_html: { class: "col-sm-2" }, wrapper: :horizontal_10
= f.input :name, label_html: { class: "col-sm-2" }, wrapper: :horizontal_10
= f.input :stripe_id, label: "Stripe ID", label_html: { class: "col-sm-2" }, wrapper: :horizontal_10
= f.input :renewal_period, label_html: { class: "col-sm-2" }, wrapper: :horizontal_10
= f.input :trial_period, label_html: { class: "col-sm-2" }, wrapper: :horizontal_10
= f.input :amount, label_html: { class: "col-sm-2" }, wrapper: :horizontal_10
= f.input :description, :as => :text, :input_html => {:rows => 5}, label_html: { class: "col-sm-2" }, wrapper: :horizontal_10
