%html{lang: "en", xmlns: "http://www.w3.org/1999/xhtml", "xmlns:fb" => "https://www.facebook.com/2008/fbml", "xmlns:og" => "http://ogp.me/ns#"}
  %head
    = render "shared/layout_meta"
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true, type: "text/javascript"
    = yield(:head)
    %link{href: "http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic", rel: "stylesheet", type: "text/css"}/
    %link{href: "http://fonts.googleapis.com/css?family=Raleway:400,300,700", rel: "stylesheet", type: "text/css"}/
  %body
    = render "shared/google_tag_manager"
    = render "shared/header"

    .main
      =  yield(:content_top) if content_for?(:content_top)
      - if flash.count > 0
        %section.wrapper-sm
          .container
            .row.flash-notifications
              - flash.each do |name, msg|
                %div{:class => "alert alert-#{name == :notice ? "success" : "danger"}"}
                  %button.close{"data-dismiss" => "alert", :href => "#"} &times;
                  =msg
      = yield

    = render "shared/footer"