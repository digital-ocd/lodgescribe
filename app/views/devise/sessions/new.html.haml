#w1
  .container
    %br/
    .col-lg-10.col-lg-offset-1.centered
      %h2
        Sign In

#w2
  .container
    .row
      .col-sm-6.col-sm-offset-3
        = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "", role: "form" }) do |f|
          %fieldset
            = f.input :email, :placeholder => "Email"
            = f.input :password, :placeholder => "Password"
            .form-group
              .checkbox
                = f.label :remember_me do
                  = f.check_box :remember_me
                  Remember me
            .form-group
              = f.submit "Sign in", :class => "btn btn-warning", :id => "submit_user_signin"
            .form-group
              = link_to "Recover password &raquo;".html_safe, new_password_path(resource_name)

