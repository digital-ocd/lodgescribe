= form_for @profile do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :initiated_at
    = f.date_select :initiated_at
  .field
    = f.label :passed_at
    = f.date_select :passed_at
  .field
    = f.label :raised_at
    = f.date_select :raised_at
  .field
    = f.label :birth_date
    = f.date_select :birth_date
  .field
    = f.label :birth_city
    = f.text_field :birth_city
  .field
    = f.label :birth_state
    = f.text_field :birth_state
  .field
    = f.label :birth_country
    = f.text_field :birth_country
  .actions
    = f.submit 'Save'
