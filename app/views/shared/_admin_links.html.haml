%li.dropdown
  = link_to '#', data: { toggle: "dropdown" }, class: "btn account dropdown-toggle"  do
    .avatar
      = image_tag gravatar_url(current_admin, 64)
    .user
      %span.hello Welcome!
      %span.name= current_admin.full_name
  %ul.dropdown-menu
    %li= link_to raw('<i class="icon-user"></i> Edit Profile'), edit_admin_user_path(current_admin)
    %li.divider
    %li= link_to raw('<i class="icon-off"></i> Sign Out'), destroy_admin_session_path, method: :delete